<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>URL-Shrinker</title>
    <!-- Bulma Version 0.9.0-->
    <link
      rel="stylesheet"
      href="https://unpkg.com/bulma@0.9.0/css/bulma.min.css"
    />
    <script
      src="https://kit.fontawesome.com/9a37a21faa.js"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="../css/contact.css" />
  </head>

  <body>
    <!-- START NAV -->
    <nav class="navbar">
      <div class="container">
        <div class="navbar-brand">
          <a class="navbar-item" href="/"> <h1>URL-Shrinker</h1>  </a>
        </div>
      </div>
    </nav>
    <!-- END NAV -->

    <section class="hero is-fullheight">
      <div class="hero-body">
        <div class="container has-text-centered">
          <div class="columns is-8 is-variable">
            <div class="column is-half has-text-left">
              <form action="/shrunkUrls" method="post">
                <div class="field">
                  <label class="label">Enter Url to be Shrunk</label>
                  <div class="control">
                    <input
                      class="input is-medium"
                      type="text"
                      placeholder="Url"
                      type="url"
                      name="fullUrl"
                      id="fullUrl"
                    />
                  </div>
                </div>

                <div class="control">
                  <button
                    type="submit"
                    class="button is-link has-text-weight-medium is-medium"
                  >
                    <i class="fas fa-crop"></i>
                  </button>
                </div>
              </form>
            </div>

            <div class="column is-half has-text-left">
              <h1 class="title is-3">Shrunk Urls</h1>
              <p class="is-size-4">A list of your shrunk Urls</p>

              <table class="table table-striped table-responsive">
                <thead>
                  <tr>
                    <th>Complete Urls</th>
                    <th>Shrunk Urls</th>
                    <th>Visited</th>
                  </tr>
                </thead>

                <tbody>
                  <% shortUrls.forEach(shortUrl => { %>
                  <tr>
                    <td>
                      <a href="<%=shortUrl.full%> "><%=shortUrl.full%></a>
                    </td>
                    <td>
                      <a href="<%=shortUrl.short%>"><%=shortUrl.short%></a>
                    </td>
                    <td><%=shortUrl.clicks%></td>
                    <td>
                      <form
                        action="/<%=shortUrl._id%>?_method=DELETE"
                        method="POST"
                      >
                        <button
                          type="submit"
                          class="btn btn-sm btn-danger mx-2"
                        >
                          <i class="fas fa-trash-alt"></i>
                        </button>
                      </form>
                    </td>
                  </tr>
                  <% }); %>
                </tbody>
              </table>

              <div class="social-media">
                <a
                  href="https://github.com/rukywe"
                  target="_blank"
                  class="button is-light is-large"
                  ><i class="fa fa-github" aria-hidden="true"></i
                ></a>
                
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </body>
</html>
